@model PT.Entity.ViewModel.UsersViewModel
@{
    ViewBag.Title = "EditUser";
}

<h2>@Model.Name @Model.Surname</h2>
<div class="row">
    <div class="col-md-offset-3 col-md-6">
        @using (Html.BeginForm("EditUser", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(x => x.UserName)
                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", plaveholder = "Kullanıcı Adı"})
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Name)
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", plaveholder = "Ad" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Surname)
                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control", plaveholder = "Soyad" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Email)
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", plaveholder = "E-Mail" })
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Salary)
                @Html.TextBoxFor(x => x.Salary, new { @class = "form-control", plaveholder = "Salary" })
            </div>

            <div>
                @Html.LabelFor(x => x.RoleName)
                @Html.DropDownListFor(x => x.RoleId, (List<SelectListItem>)ViewBag.roles, new { @class = "form-control" })
            </div>
            @Html.HiddenFor(x=>x.UserId)

            <div class="row">
                <div class=" col-sm-12">
                    <input type="submit" value="Güncelle" class="btn btn-success btn-block" />
                </div>
            </div>

        }
    </div>
</div>



